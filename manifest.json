{
  "manifest_version": 3,
  "version": "1.0",
  "name": "2048 bot",
  "content_scripts": [
    {
      "matches": [
        "https://2048game.com/*", "https://play2048.co/*"
      ],
      "js": [
        "main.js"
      ]
    }
  ],
  
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs"
  ]
}